<%- include("head"); -%>
<div class="form">
  <form action="/posts" method="POST">
    <h1 class="post_title">What's on the Slope!</h1>
    <input type="email" id="username" name="email" required />
    <input type="input" id="user_text" name="user_text" required />
    <input type="input" id="location" name="location" required />

    <label for="category_menu">Category:</label>
    <select id="category" name="category">
      <option value="equipment">Equipment</option>
      <option value="car pooling">Car Pooling</option>
      <option value="slope buddy">SLope Buddy</option>
      <!--        <option value="ski resorts">Ski Resorts</option>-->
    </select>
    <button type="submit" id="btn">Post</button>
  </form>
</div>

<!--      Geolocation     -->
<div class="geo">
  <p>Click the button to see your nearby resorts!</p>
  <a href="/nearby_resorts"><button>Nearby Resorts</button></a>
  <p id="location"></p>
</div>

<div>
  <h1>Search nearby Ski Resorts</h1>
  <p>Input zip code</p>
  <input type="text" id="zip" name="zip" required />
  <button type="submit" id="zip_btn">Search</button>
</div>

<% if(posts!= null){ %> 
<% console.log(posts, 'This is name from index.js') %>
<% for (let i=0; i<posts.length; i++){ %>
<div class="card mb-3">
  <img class="card-img-top" src="..." alt="Card image cap" />
  <div class="card-body">
    <a href="../posts?email=<%=posts[i].email%>"><h5 class="card-title"><%=posts[i].email%></h5></a>
    <p class="card-text"><%=posts[i].text%></p>
    <a href="../posts?location=<%=posts[i].location%>"><p><%=posts[i].location%></p></a>
    <a href="../posts?category=<%=posts[i].category%>"><p><%=posts[i].category%></p></a>
    <p class="card-text">
      <small class="text-muted">Last updated 3 mins ago</small>
    </p>
  </div>
</div>
  <% }} %>
