<!-- Left Column -->
<div class="w3-col m3 sticky">
    <!-- Profile -->
    <div class="w3-card w3-round w3-white sticky">
      <div class="w3-container">
        <h4 class="w3-center">My Profile</h4>
        <p class="w3-center"><img src="<%=user.avatar%>" class="w3-circle" style="height:106px;width:106px" alt="Avatar"></p>
        <hr>
        <p><i class="fa fa-user-circle fa-fw w3-margin-right w3-text-theme"></i> <%=user.email%></p>
      </div>
    </div>
    <br>

    <!-- FILTER -->
    <div class="w3-card w3-round w3-white w3-hide-small">
      <div class="w3-container">
        <p>FILTER</p>
        <p>
          <form action="/posts" method="GET">
            <input placeholder="Email?" name="email">
            <input style="text-transform: uppercase" oninput="this.value = this.value.toUpperCase()" placeholder="State? in XX" maxlength="2" name="location">
            <select name="category">
              <option value="">Category</option>
              <option value="equipment">Equipment</option>
              <option value="car pooling">Car Pooling</option>
              <option value="slope buddy">SLope Buddy</option>
            </select>
            <button class="w3-button w3-theme-d1 w3-margin-bottom" type="submit"><i class="fa fa-search" aria-hidden="true"></i> FIND</button>
            <a href="/main"><button class="w3-button w3-theme-d1 w3-margin-bottom" type="button"> GET ALL</button></a>
          </form>
        </p>
      </div>
    </div>
    <br>

    <!-- Alert Box -->
    <div class="w3-container w3-display-container w3-round w3-theme-l4 w3-border w3-theme-border w3-margin-bottom w3-hide-small">
      <span onclick="this.parentElement.style.display='none'" class="w3-button w3-theme-l3 w3-display-topright">
        <i class="fa fa-remove"></i>
      </span>
      <p><strong>Thank you!</strong></p>
      <p>For coming by the SLopes.</p>
    </div>

    <!-- End Left Column -->
  </div>